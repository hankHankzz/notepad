<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/tv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_blue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="#0000FF"
        android:gravity="center"
        android:text="@string/tv_blue"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_violet"
        app:layout_constraintEnd_toEndOf="@+id/tv_background"
        app:layout_constraintStart_toStartOf="@+id/tv_background"
        app:layout_constraintTop_toBottomOf="@+id/tv_orange" />

    <TextView
        android:id="@+id/tv_green"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginEnd="15dp"
        android:background="#00FF00"
        android:gravity="center"
        android:text="@string/tv_green"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_blue"
        app:layout_constraintTop_toTopOf="@+id/tv_blue" />

    <TextView
        android:id="@+id/tv_indigo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:background="#42009A"
        android:gravity="center"
        android:text="@string/tv_indigo"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/tv_blue"
        app:layout_constraintTop_toTopOf="@+id/tv_blue" />

    <TextView
        android:id="@+id/tv_violet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FF47FC"
        android:gravity="center"
        android:text="@string/tv_violet"
        android:textSize="24sp"
        android:onClick="click_to_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_yellow"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="@string/tv_yellow"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_background" />

    <TextView
        android:id="@+id/tv_red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FF0000"
        android:gravity="center"
        android:text="@string/tv_red"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_background" />

    <TextView
        android:id="@+id/tv_orange"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="288dp"
        android:background="#FF7F00"
        android:gravity="center"
        android:text="@string/tv_orange"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_background" />
</androidx.constraintlayout.widget.ConstraintLayout>